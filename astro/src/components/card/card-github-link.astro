---
import GithubIcon from "@/components/icons/github-icon.astro";

type Props = {
  githubURL?: string;
};

const { githubURL } = Astro.props;
---

{
  githubURL ? (
    <a class="btn-sm flex-1 text-xs" href={githubURL} target="_blank">
      <GithubIcon />
      Github
    </a>
  ) : (
    <button class="btn-sm flex-1 text-xs" disabled>
      <GithubIcon />
      Github
    </button>
  )
}
